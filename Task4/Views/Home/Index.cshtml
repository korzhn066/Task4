@model Task4.Models.UserViewModel
@{
    ViewData["Title"] = "Home Page";
}

<script type="text/javascript">
    function check(field, checkbox) {
        if (checkbox.checked) {
            for (i = 0; i < field.length; i++)
                field[i].checked = true;
        } else {
            for (i = 0; i < field.length; i++)
                field[i].checked = false;
        }
    }
</script>

<style>
    .btnmargin{
        margin-right: 10px;
    }
</style>

<table class="table">
    <form method="post" asp-controller="Home">
        <button class="btn btn-success btnmargin" type="submit" value="Unblock" asp-action="IndexUnblock">
            <i class="bi bi-door-open"></i>
            Unblock
        </button>

        <button class="btn btn-danger btnmargin" type="submit" value="Block" asp-action="IndexBlock">
            <i class="bi bi-ban"></i>
            Block
        </button>

        <button class="btn btn-danger" type="submit" value="Delete" asp-action="IndexDelete">
            <i class="bi bi-trash3"></i>
            Delete    
        </button>

        <thead>
            <tr>
                <th scope="col">
                <input class="form-check-input" type="checkbox" value="" id="" onchange="check(this.form.usersId, this)">
                </th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Status</th>
                <th scope="col">Registered</th>
                <th scope="col">LastLogin</th>
            </tr>
        </thead>
        <tbody>
        
                @foreach (var user in @Model.Users)
                {
                <tr>
                <th scope="row">
                    <input class="form-check-input" type="checkbox" name="usersId" value="@user.Id">
                    </th>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Status</td>
                    <td>@user.Registered</td>
                    <td>@user.LastLogined</td>
                </tr>
                }
        </tbody>
     </form>
</table>
